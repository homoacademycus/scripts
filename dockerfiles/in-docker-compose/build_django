FROM centos:7
MAINTAINER homoacademycus

RUN yum install -y epel-release
RUN yum install -y git
RUN yum install -y python3

# install pip3 with root permission is not good. use --user option
RUN pip3 install django==3.1.7
RUN pip3 install djangorestframework
RUN pip3 install uvicorn
RUN pip3 install gunicorn
RUN pip3 install djangorestframework-simplejwt
RUN pip3 install django-cors-headers==3.7.0
RUN pip3 install django-redis
RUN pip3 install python-decouple
RUN pip3 install psycopg2-binary
RUN pip3 install django-filter

ENTRYPOINT "/bin/bash"
