FROM centos:7
MAINTAINER homoacademycus

ARG workingdir=/reactApp
RUN mkdir -p ${workingdir}
RUN cd ${workingdir}
WORKDIR ${workingdir}

COPY npm.prettierrc ${workingdir}/.prettierrc
COPY react.eslintrc.json ${workingdir}/.eslintrc.json

RUN yum install -y epel-release
RUN yum install -y git
RUN yum install -y nodejs

RUN npm cache clean -f
RUN npm install -g n
RUN n stable
RUN npm install -y -g create-react-app
RUN npm install -y -g --save-dev eslint prettier eslint-config-prettier eslint-plugin-react gh-pages
RUN npm init -y
RUN eslint --init

RUN npm install -y -g react react-dom react-router-dom react-app react-scripts 
RUN npm install -y -g styled-components prop-types react-table
RUN npm install -y -g axios brcypt jsonwebtoken axios faker cra-template

ENTRYPOINT ["npm","run", "start"]
